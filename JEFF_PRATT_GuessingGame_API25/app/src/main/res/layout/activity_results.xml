<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpratt.guessinggame.ResultsActivity">

    <TextView
        android:id="@+id/guessDescriptionText"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="83dp"
        android:gravity="center"
        android:text="@string/guessCountText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/guessCounter"
        android:layout_width="235dp"
        android:layout_height="208dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="@+id/guessDescriptionText"
        app:layout_constraintTop_toBottomOf="@+id/guessDescriptionText"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="152dp"
        android:layout_height="56dp"
        android:layout_marginBottom="53dp"
        android:text="play again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


    <ImageView  android:id="@+id/imageViewDerp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/derp"
        android:layout_centerHorizontal="true"
        />

</android.support.constraint.ConstraintLayout>
